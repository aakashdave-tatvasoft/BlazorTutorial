@page "/employeedetails/{id}"
@inherits EmployeeDetailsBase

<h3>Employee Details</h3>
@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}
else if (Employee == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card-deck">
        <div class="card m-3" style="min-width:18rem; max-width:30.5%">
            <div class="card-header">
                <h3 @onclick="@Mouse_Click">@Employee.Firstname @Employee.Lastname @Coordniates</h3>
                <div class="btn btn-primary" @onclick = "@Toggle_Footer">@BtnText</div>
            </div>
            <div class="card-footer @CSS_HideFooter" >
                <a href="@("/")" class="btn btn-secondary">Back</a>
                <div class="btn btn-info">Edit</div>
                <div class="btn btn-danger">Delete</div>
            </div>
        </div>
    </div>
}